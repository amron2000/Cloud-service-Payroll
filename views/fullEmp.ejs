  <div class="row mt-5" style="padding: 80px;">
      <div class="col-md-6 m-auto">
        <div class="card card-body">
          <h1 class="text-center mb-3">
             Add Academic
          </h1>
          <%-include('messages')%>
          <form action="/admin/register" method="POST">
          <div>
            <h3>Login Details</h3>
          </div>  
            <div class="form-group">
                <label for="uname">UserName</label>
                <input
                  type="text"
                  id="uname"
                  name="uname"
                  class="form-control"      
                  value="<%= typeof email != 'undefined' ? email : '' %>"
                />
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  value="<%= typeof password != 'undefined' ? password : '' %>"
                  required
                />
              </div>
            <div>
                  <h3>Personal Detail</h3>
            </div>  
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="name"
                id="name"
                name="name"
                class="form-control"
                value="<%= typeof name != 'undefined' ? name : '' %>"
                required
              />
            </div>
            <div class="form-group">
                <label for="eid">Employee Id.</label>
                <input
                  type="number"
                  id="eid"
                  name="eid"
                  class="form-control"
                  value="<%= typeof name != 'undefined' ? name : '' %>"
                  required
                  />
              </div>
              <div class="form-group">
                  <label for="gender">Gender</label>
                  <input
                    type="text"
                    id="gender"
                    name="gender"
                    class="form-control"
                    value="<%= typeof name != 'undefined' ? name : '' %>"
                    required
                    />
                </div> 
                <div class="form-group">
                    <label for="dob">Date of Birth</label>
                    <input
                      type="date"
                      id="dob"
                      name="dob"
                      class="form-control"
                      value="<%= typeof name != 'undefined' ? name : '' %>"
                      required
                      />
                  </div> 
                <div class="form-group">
                    <label for="doj">Date of Joining</label>
                    <input
                      type="date"
                      id="doj"
                      name="doj"
                      class="form-control"
                      value="<%= typeof name != 'undefined' ? name : '' %>"
                      required
                      />
                  </div> 
                  <div class="form-group">
                      <label for="phone">Phone No.</label>
                      <input
                        type="number"
                        id="phone"
                        name="phone"
                        class="form-control"
                        value="<%= typeof name != 'undefined' ? name : '' %>"
                        required
                        />
                    </div> 
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input
                          type="text"
                          id="address"
                          name="address"
                          class="form-control"
                          value="<%= typeof name != 'undefined' ? name : '' %>"
                          required
                          />

                      </div>
                      <div class="form-group">
                          <label for="dno">Department No.</label>
                          <input
                            type="number"
                            id="dno"
                            name="dno"
                            class="form-control"
                            value="<%= typeof name != 'undefined' ? name : '' %>"
                            required
                            />
                        </div>   
                          <div>
                              <h3>Salary</h3>
                            </div>        
                          <div class="form-group">
                              <label for="sid">Salary id</label>
                              <input
                                type="number"
                                id="sid"
                                name="sid"
                                class="form-control"
                                value="<%= typeof name != 'undefined' ? name : '' %>"
                                required
                                />
                            </div>
                            <div class="form-group">
                              <label for="base">Base Salary (or By Hour)</label>
                              <input
                                type="number"
                                id="base"
                                name="base"
                                class="form-control"
                                value="<%= typeof name != 'undefined' ? name : '' %>"
                                required
                        />
          </div>
            <div class="form-group">
                <label for="hra">House Rent Allowance</label>
                <input
                  type="number"
                  id="hra"
                  name="hra"
                  class="form-control"
                  value="<%= typeof name != 'undefined' ? name : '' %>"
                  required
                  />
              </div>
              <div class="form-group">
                  <label for="da">Dearness Allowance</label>
                  <input
                    type="number"
                    id="da"
                    name="da"
                    class="form-control"
                    value="<%= typeof name != 'undefined' ? name : '' %>"
                    required
                    />
                </div>  
                <div class="form-group">
                    <label for="ma">Medical Allowance</label>
                    <input
                      type="number"
                      id="ma"
                      name="ma"
                      class="form-control"
                      value="<%= typeof name != 'undefined' ? name : '' %>"
                      required
                      />
                  </div>
                  <div>
                      <h3>Deduction Details</h3>
                    </div>
                  <div class="form-group">
                      <label for="did">Deduction Id.</label>
                      <input
                        type="number"
                        id="did"
                        name="did"
                        class="form-control"
                        value="<%= typeof name != 'undefined' ? name : '' %>"
                        required
                        />
                    </div>    
                    <div class="form-group">
                        <label for="tax">Tax Deduction (0 if casual)</label>
                        <input
                          type="number"
                          id="tax"
                          name="tax"
                          class="form-control"
                          value="<%= typeof name != 'undefined' ? name : '' %>"
                          required
                          />
                      </div>  
             
              <div class="form-group">
                          <label for="leave">Deduction For Leave (None if casual)</label>
                          <input
                            type="number"
                            id="leave"
                            name="leave"
                            class="form-control"
                            value="<%= typeof name != 'undefined' ? name : '' %>"
                            required
                            />
                </div>
                <div class="form-group">
                    <label for="pf">Provident Fund</label>
                    <input
                      type="number"
                      id="pf"
                      name="pf"
                      class="form-control"
                      value="<%= typeof name != 'undefined' ? name : '' %>"
                      required
                      />
                  </div>
                  <div class="form-group">
                      <label for="wf">Welfare Fund</label>
                      <input
                        type="number"
                        id="wf"
                        name="wf"
                        class="form-control"
                        value="<%= typeof name != 'undefined' ? name : '' %>"
                        required
                        />
                    </div> 
                    <div class="form-group">
                        <label for="loan">Loan Deduction</label>
                        <input
                          type="number"
                          id="loan"
                          name="loan"
                          class="form-control"
                          value="<%= typeof name != 'undefined' ? name : '' %>"
                          required
                          />
                      </div>
                      <div class="form-group">
                          <label for="bus">Hostel/Bus Charges</label>
                          <input
                            type="number"
                            id="bus"
                            name="bus"
                            class="form-control"
                            value="<%= typeof name != 'undefined' ? name : '' %>"
                            required
                            />
                        </div>           
            
            <button type="submit" class="btn btn-primary btn-block">
              Register
            </button>
          </form>
        </div>
      </div>
    </div>
  